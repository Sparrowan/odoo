<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="patient_id" string="Patient" />
                <field name="date_appointment" string="Appointment Date" optional="show" />
                <field name="note" string="Note" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" string="Patient" />
                            <field name="date_appointment" string="Appointment Date" />
                        </group>
                        <group>
                            <field name="note" string="Note" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
            eval="[Command.clear(),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_hospital_appointment_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_appointment_form')})]" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment
            </p>
        </field>
    </record>

</odoo>